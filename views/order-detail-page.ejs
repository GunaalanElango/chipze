<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Order Detail Page</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link href="/css/adminpanel/app.min.css" rel="stylesheet" />
    <script src="/js/adminpanel/app.min.js" defer></script>

</head>

<body>

    <div id="page-loader" class="fade show">
        <span class="spinner"></span>
    </div>


    <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">

        <div id="header" class="header navbar-default">

            <div class="navbar-header">
                <a href="" class="navbar-brand"><span class="navbar-logo"></span> <b>Chipze</b> Admin</a>
                <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

        </div>

        <!-- <div class="sidebar-bg"></div> -->

        <div id="content" class="content">

            <h1 class="page-header">OrderId <%= order.id %> <small>status: <%= order.status %></small></h1>
            <h2>Total Price: <%= order.totalPrice %></h2>

            <div class="row">

                <div class="col-md-12">

                    <div class="result-container">
                        <div class="input-group input-group-lg mb-3">
                        </div>

                        <div class="d-block d-md-flex align-items-center mb-3">
                            <div class="d-flex">
                                <div class="dropdown mr-2">
                                    <a href="" class="btn btn-white btn-white-without-border dropdown-toggle"
                                        data-toggle="dropdown">
                                        Order Products
                                    </a>
                                </div>
                            </div>
                        </div>

                        <ul class="result-list">
                            <% for (let orderProd of order.order_products) { %>
                            <li style="padding: 10px;">
                                <a href="#" class="result-image"
                                    style="background-image: url('<%= orderProd.product.indexImage %>');"></a>
                                <div class="result-info">
                                    <h4 class="title"><%= orderProd.product.name %></h4>
                                    <p class="location">Quantity <%= orderProd.quantity %></p>
                                </div>
                                <div class="result-price">
                                    &#8377; <%= orderProd.totalPrice %>
                                </div>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>