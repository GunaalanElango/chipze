<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title><%= product.name %></title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link href="/css/app.min.css" rel="stylesheet" />
    <script src="/js/app.min.js" defer></script>

</head>

<body>

    <div id="page-container" class="fade">

        <%- include("./navigation-bar.ejs") %>

        <div id="product" class="section-container p-t-20">

            <div class="container">

                <div class="product">

                    <div class="product-detail">

                        <div class="product-image">

                            <div class="product-thumbnail">
                                <ul class="product-thumbnail-list">
                                    <% for (const image of images) { %>
                                    <li class="active"><a href="#" data-click="show-main-image"
                                            data-url="<%= image.extraImage %>"><img src="<%= image.extraImage %>"
                                                alt="" /></a>
                                    </li>
                                    <% } %>
                                    <li class="active"><a href="#" data-click="show-main-image"
                                            data-url="<%= product.indexImage %>"><img src="<%= product.indexImage %>"
                                                alt="" /></a>
                                    </li>
                                </ul>
                            </div>


                            <div class="product-main-image" data-id="main-image">
                                <img src="<%= product.indexImage %>" alt="" />
                            </div>

                        </div>


                        <div class="product-info">

                            <div class="product-info-header">
                                <h1 class="product-title"><span class="badge bg-primary">41% OFF</span>
                                    <%= product.name %> </h1>
                                <ul class="product-category">
                                    <li><a href="#"><%= product.subcategory.categoryName %></a></li>
                                    <li>/</li>
                                    <li><a href="#"><%= product.subcategory.name %></a></li>
                                </ul>
                            </div>


                            <div class="product-warranty">
                                <% if (parseInt(stock.available) <= 0) { %>
                                <div><b>Availability: Out of Stock</b></div>
                                <% } else { %>
                                <div><b>Availability: In stock</b></div>
                                <% } %>
                            </div>


                            <ul class="product-info-list">
                                <% for (const key of keyFeatures) { %>
                                <li>+ <%= key.keyFeature %></li>
                                <% } %>
                            </ul>

                            <div class="product-purchase-container">
                                <div class="product-discount">
                                    <span class="discount">&#8377; <%= product.originalPrice %></span>
                                </div>
                                <div class="product-price">
                                    <div class="price">&#8377; <%= product.sellingPrice %></div>
                                </div>
                                <form action="/customer/add-to-cart/<%= product.id %>" method="POST">
                                    <button class="btn btn-inverse btn-theme btn-lg width-200">ADD TO
                                        CART</button>
                                </form>

                            </div>

                        </div>

                    </div>


                    <div class="product-tab">

                        <ul id="product-tab" class="nav nav-tabs">
                            <li class="nav-item"><a class="nav-link active" href="#product-desc"
                                    data-toggle="tab">Product Description</a></li>
                            <li class="nav-item"><a class="nav-link" href="#product-info"
                                    data-toggle="tab">Specifications</a></li>
                            <li class="nav-item"><a class="nav-link" href="#product-reviews" data-toggle="tab">Rating &
                                    Reviews (<%= reviews.length %>)</a></li>
                        </ul>


                        <div id="product-tab-content" class="tab-content">

                            <div class="tab-pane fade active show" id="product-desc">
                                <% let count = 0 %>
                                <% for (const desc of descriptions) { %>
                                <% if ((count % 2) == 0) { %>
                                <div class="product-desc">
                                    <div class="image">
                                        <img src="" alt="" />
                                    </div>
                                    <div class="desc">
                                        <h4><%= desc.name %></h4>
                                        <p><%= desc.value %></p>
                                    </div>
                                </div>
                                <% } else { %>
                                <div class="product-desc right">
                                    <div class="image">
                                        <img src="" alt="" />
                                    </div>
                                    <div class="desc">
                                        <h4><%= desc.name %></h4>
                                        <p><%= desc.value %></p>
                                    </div>
                                </div>
                                <% } %>
                                <% count++ %>
                                <% } %>

                            </div>


                            <div class="tab-pane fade" id="product-info">

                                <div class="table-responsive">

                                    <table class="table table-product table-striped">
                                        <thead>
                                            <tr>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (const spec of specifications) { %>
                                            <tr>
                                                <td class="field"><%= spec.name %></td>
                                                <td><%= spec.value %></td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>

                                </div>

                            </div>


                            <div class="tab-pane fade" id="product-reviews">

                                <div class="row row-space-30">

                                    <div class="col-md-7 mb-4 mb-lg-0">
                                        <% if (reviews.length <= 0) { %>
                                        <h1>No Reviews</h1>
                                        <% } %>
                                        <% for (let review of reviews) { %>
                                        <div class="review">
                                            <div class="review-info">
                                                <div class="review-rate">
                                                    Rating => (<%= review.rating %>/5)
                                                </div>
                                                <div class="review-name"><%= customer.name %></div>
                                                <div class="review-date"><%= review.date %></div>
                                            </div>
                                            <div class="review-title">
                                                <%= review.title %>
                                            </div>
                                            <div class="review-message">
                                                <%= review.comment %>
                                            </div>
                                        </div>
                                        <% } %>
                                    </div>


                                    <div class="col-md-5">

                                        <div class="review-form">
                                            <form action="/customer/product-review" name="review_form" method="POST">
                                                <h2>Write a review</h2>
                                                <div class="form-group">
                                                    <label for="email">Title <span class="text-danger">*</span></label>
                                                    <input type="text" name="title" class="form-control" id="email" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="review">Review <span
                                                            class="text-danger">*</span></label>
                                                    <textarea class="form-control" rows="8" id="review"
                                                        name="comment"></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label for="email">Rating <span class="text-danger">*</span></label>
                                                    <!-- <div class="rating rating-selection" data-rating="true"
                                                        data-target="rating">
                                                        <i class="far fa-star" data-value="2"></i>
                                                        <i class="far fa-star" data-value="4"></i>
                                                        <i class="far fa-star" data-value="6"></i>
                                                        <i class="far fa-star" data-value="8"></i>
                                                        <i class="far fa-star" data-value="10"></i>
                                                        <span class="rating-comment">
                                                            <span class="rating-comment-tooltip">Click to rate</span>
                                                        </span>
                                                    </div> -->
                                                    <br>
                                                    <select name="rating" class="col-md-12" style="padding: 5px;">
                                                        <option value="1">1</option>
                                                        <option value="2">2</option>
                                                        <option value="3">3</option>
                                                        <option value="4">4</option>
                                                        <option value="5">5</option>
                                                    </select>
                                                </div>
                                                <input type="hidden" name="productId" value="<%= product.id %>">
                                                <button type="submit" class="btn btn-inverse btn-theme btn-lg">Submit
                                                    Review</button>
                                            </form>
                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>


                <h4 class="m-b-15 m-t-30">You Might Also Like</h4>
                <div class="row row-space-10">
                    <div class="col-lg-2 col-md-4">

                        <div class="item item-thumbnail">
                            <a href="product_detail.html" class="item-image">
                                <img src="../assets/img/product/product-iphone.png" alt="">
                                <div class="discount">15% OFF</div>
                            </a>
                            <div class="item-info">
                                <h4 class="item-title">
                                    <a href="product_detail.html">iPhone 6s Plus<br>16GB</a>
                                </h4>
                                <p class="item-desc">3D Touch. 12MP photos. 4K video.</p>
                                <div class="item-price">$649.00</div>
                                <div class="item-discount-price">$739.00</div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-2 col-md-4">

                        <div class="item item-thumbnail">
                            <a href="product_detail.html" class="item-image">
                                <img src="../assets/img/product/product-samsung-note5.png" alt="">
                                <div class="discount">32% OFF</div>
                            </a>
                            <div class="item-info">
                                <h4 class="item-title">
                                    <a href="product.html">Samsung Galaxy Note 5<br>Black</a>
                                </h4>
                                <p class="item-desc">Super. Computer. Now in two sizes.</p>
                                <div class="item-price">$599.00</div>
                                <div class="item-discount-price">$799.00</div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-2 col-md-4">

                        <div class="item item-thumbnail">
                            <a href="product_detail.html" class="item-image">
                                <img src="../assets/img/product/product-iphone-se.png" alt="">
                                <div class="discount">20% OFF</div>
                            </a>
                            <div class="item-info">
                                <h4 class="item-title">
                                    <a href="product.html">iPhone SE<br>32/64Gb</a>
                                </h4>
                                <p class="item-desc">A big step for small.</p>
                                <div class="item-price">$499.00</div>
                                <div class="item-discount-price">$599.00</div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-2 col-md-4">

                        <div class="item item-thumbnail">
                            <a href="product_detail.html" class="item-image">
                                <img src="../assets/img/product/product-zenfone2.png" alt="">
                                <div class="discount">15% OFF</div>
                            </a>
                            <div class="item-info">
                                <h4 class="item-title">
                                    <a href="product_detail.html">Assus ZenFone 2<br>‏(ZE550ML)</a>
                                </h4>
                                <p class="item-desc">See What Others Can’t See</p>
                                <div class="item-price">$399.00</div>
                                <div class="item-discount-price">$453.00</div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-2 col-md-4">

                        <div class="item item-thumbnail">
                            <a href="product_detail.html" class="item-image">
                                <img src="../assets/img/product/product-xperia-z.png" alt="">
                                <div class="discount">32% OFF</div>
                            </a>
                            <div class="item-info">
                                <h4 class="item-title">
                                    <a href="product.html">Sony Xperia Z<br>Black Color</a>
                                </h4>
                                <p class="item-desc">For unexpectedly beautiful moments</p>
                                <div class="item-price">$599.00</div>
                                <div class="item-discount-price">$799.00</div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-2 col-md-4">

                        <div class="item item-thumbnail">
                            <a href="product_detail.html" class="item-image">
                                <img src="../assets/img/product/product-lumia-532.png" alt="">
                                <div class="discount">20% OFF</div>
                            </a>
                            <div class="item-info">
                                <h4 class="item-title">
                                    <a href="product.html">Microsoft Lumia 531<br>Smartphone Orange</a>
                                </h4>
                                <p class="item-desc">1 Year Local Manufacturer Warranty</p>
                                <div class="item-price">$99.00</div>
                                <div class="item-discount-price">$199.00</div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

        <%- include("./footer.ejs") %>

</html>