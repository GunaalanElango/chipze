                                <% if ((count % 2) == 0) { %>
                                <div class="product-desc">
                                    <div class="image">
                                        <img src="" alt="" />
                                    </div>
                                    <div class="desc">
                                        <h4><%= desc.name %></h4>
                                        <p><%= desc.value %></p>
                                    </div>
                                </div>
                                <% } else { %>
                                <div class="product-desc right">
                                    <div class="image">
                                        <img src="" alt="" />
                                    </div>
                                    <div class="desc">
                                        <h4><%= desc.name %></h4>
                                        <p><%= desc.value %></p>
                                    </div>
                                </div>
                                <% } %>
                                <% count++ %>
                                <% } %>

